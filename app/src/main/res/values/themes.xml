<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GeekBrains_HW2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray_for_calc</item>
        <item name="colorPrimaryVariant">@color/calc_background</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="materialButtonStyle">@style/CalcButton</item>
        <!-- Customize your theme here. -->
        <item name="actionButtonColor">@color/action_button_color</item>

    </style>

    <style name="Theme.GeekBrains_HW2.V2">

        <item name="materialButtonStyle">@style/Widget.AppCompat.Button</item>
        <item name="actionButtonColor">@color/fbutton_color_green_sea</item>

    </style>

    <style name="Theme.GeekBrains_HW2.v3">
        <item name="materialButtonStyle">@style/Widget.AppCompat.Button</item>
        <item name="actionButtonColor">@color/fbutton_color_carrot</item>
    </style>
</resources>